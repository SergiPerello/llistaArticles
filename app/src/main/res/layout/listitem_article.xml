<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/LblCodi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Codi"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/LblDescripcio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/LblPvp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pvp"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/LblEstoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estoc"
            android:textSize="14sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/showMoviments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:srcCompat="@drawable/ic_history_black_48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/addStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            app:srcCompat="@drawable/ic_add_black_48dp" />

        <ImageView
            android:id="@+id/removeStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_remove_black_48dp" />

    </LinearLayout>

</LinearLayout>
